		<metadata>
			<keywords>
				<keyword>installing DITA Open Toolkit</keyword>
				<keyword>JDK</keyword>
				<keyword>Java Development Kit</keyword>
				<indexterm>installing on Linux<indexterm>JDK</indexterm></indexterm>
				<indexterm>JDK (Java Development Kit)<indexterm>installing on Linux</indexterm></indexterm>
				<indexterm>Java Development Kit (JDK)<indexterm>installing on Linux</indexterm></indexterm>
