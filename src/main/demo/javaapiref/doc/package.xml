<?xml version="1.0" encoding="UTF-8"?>
<package id="javaapiref"
      xmlns="http://www.ibm.com/dita/specializationPackage">

  <output title="Java API Reference Content Model Definitions"/>

  <attributeGroup name="univ-atts">
    <attribute name="platform"/>
    <attribute name="product"/>
    <attribute name="audience"/>
    <attribute name="otherprops"/>
    <attribute name="rev"/>
    <attribute name="status"/>
    <attribute name="id"/>
    <attribute name="conref"/>
    <attribute name="translate"/>
    <attribute name="xml:lang"/>
    <attribute name="importance"/>
  </attributeGroup>
  <attributeGroup name="univ-atts-no-importance">
    <attribute name="platform"/>
    <attribute name="product"/>
    <attribute name="audience"/>
    <attribute name="otherprops"/>
    <attribute name="rev"/>
    <attribute name="status"/>
    <attribute name="id"/>
    <attribute name="conref"/>
    <attribute name="translate"/>
    <attribute name="xml:lang"/>
  </attributeGroup>
  <attributeGroup name="id-atts">
    <attribute name="id"/>
    <attribute name="conref"/>
  </attributeGroup>
  <attributeGroup name="select-atts">
    <attribute name="platform"/>
    <attribute name="product"/>
    <attribute name="audience"/>
    <attribute name="otherprops"/>
    <attribute name="rev"/>
    <attribute name="status"/>
    <attribute name="importance"/>
  </attributeGroup>
  <attributeGroup name="topicref-atts">
    <attribute name="collection-type"/>
    <attribute name="type"/>
    <attribute name="locktitle"/>
    <attribute name="format"/>
    <attribute name="linking"/>
    <attribute name="print"/>
    <attribute name="search"/>
    <attribute name="chunk"/>
    <attribute name="toc"/>
  </attributeGroup>
  <attributeGroup name="topicref-atts-no-toc">
    <attribute name="collection-type"/>
    <attribute name="type"/>
    <attribute name="locktitle"/>
    <attribute name="format"/>
    <attribute name="linking"/>
    <attribute name="print"/>
    <attribute name="search"/>
    <attribute name="chunk"/>
  </attributeGroup>
  <attributeGroup name="display-atts">
    <attribute name="scale"/>
    <attribute name="frame"/>
    <attribute name="expanse"/>
  </attributeGroup>
  <attributeGroup name="global-atts">
    <attribute name="xtrf"/>
    <attribute name="xtrc"/>
  </attributeGroup>
  <attributeGroup name="rel-atts">
    <attribute name="type"/>
    <attribute name="role"/>
    <attribute name="otherrole"/>
  </attributeGroup>

  <input file="javaAPIMap.dtd">
    <module name="javaAPIMap"    directory="javaAPIMap/"/>
  </input>
  <input file="javaPackage.dtd">
    <module name="javaPackage"   directory="javaPackage/"/>
  </input>
  <input file="javaClass.dtd">
    <module name="javaClass"     directory="javaClass/"/>
    <module name="javaMethod"    directory="javaMethod/"/>
    <module name="javaField"     directory="javaField/"/>
    <module name="javaapi-d"     directory="javaApiDomain/"/>
  </input>
  <input file="javaInterface.dtd">
    <module name="javaInterface" directory="javaInterface/"/>
  </input>

  <base>
    <module name="map"       directory="../../../doc/"/>
    <module name="topic"     directory="../../../doc/"/>
    <module name="concept"   directory="../../../doc/"/>
    <module name="reference" directory="../../../doc/"/>
    <module name="task"      directory="../../../doc/"/>
    <module name="ditabase"  directory="../../../doc/"/>

    <module name="hi-d"      directory="../../../doc/"/>
    <module name="pr-d"      directory="../../../doc/"/>
    <module name="sw-d"      directory="../../../doc/"/>
    <module name="ui-d"      directory="../../../doc/"/>
    <module name="ut-d"      directory="../../../doc/"/>

    <module name="apiRef"        directory="../../apiref/doc/apiRef/"/>
    <module name="apiMap"        directory="../../apiref/doc/apiMap/"/>
    <module name="api-d"         directory="../../apiref/doc/apiDomain/"/>
    <module name="apiPackage"    directory="../../apiref/doc/apiPackage/"/>
    <module name="apiValue"      directory="../../apiref/doc/apiValue/"/>
    <module name="apiClassifier" directory="../../apiref/doc/apiClassifier/"/>
    <module name="apiOperation"  directory="../../apiref/doc/apiOperation/"/>
